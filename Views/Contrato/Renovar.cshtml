@model inmobiliaria_mvc.Models.Contrato

@{
    ViewData["Title"] = "Renovar Contrato";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Renovar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Inquilino</label>
                <input type="text" class="form-control"
                    value="@($"{Model.Inquilino?.Nombre} {Model.Inquilino?.Apellido}")" disabled />
                <input type="hidden" asp-for="IdInquilino" />
            </div>

            <div class="form-group mt-2">
                <label>Inmueble</label>
                <input type="text" class="form-control" value="@Model.Inmueble?.Direccion" disabled />
                <input type="hidden" asp-for="IdInmueble" />
            </div>

            <div class="form-group mt-2">
                <label asp-for="Fecha_inicio" class="control-label"></label>
                <input asp-for="Fecha_inicio" class="form-control" type="date" />
                <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Fecha_fin" class="control-label"></label>
                <input asp-for="Fecha_fin" class="form-control" type="date" />
                <span asp-validation-for="Fecha_fin" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Renovar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a Lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}