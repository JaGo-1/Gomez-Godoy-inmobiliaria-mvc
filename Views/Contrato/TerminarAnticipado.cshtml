@model inmobiliaria_mvc.Models.Contrato

@{
    ViewData["Title"] = "Terminar Contrato Anticipadamente";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="TerminarAnticipado" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FechaTerminacionAnticipada" class="control-label"></label>
                <input asp-for="FechaTerminacionAnticipada" class="form-control" type="date" id="FechaTerminacionAnticipada" />
                <span asp-validation-for="FechaTerminacionAnticipada" class="text-danger"></span>
            </div>

            <div class="alert alert-info mt-3">
                <p><strong>Meses totales:</strong> <span id="totalMeses">@ViewBag.TotalMeses</span></p>
                <p><strong>Meses transcurridos:</strong> <span id="mesesTranscurridos">@ViewBag.MesesTranscurridos</span></p>
                <p><strong>Meses adeudados:</strong> <span id="mesesAdeudados">@ViewBag.MesesAdeudados</span></p>
                <p><strong>Multa calculada:</strong> <span id="multaMeses">@ViewBag.MultaMeses</span> meses (<span id="multaImporte">@ViewBag.MultaImporte.ToString("C")</span>)</p>
            </div>

            <div class="form-group form-check mt-3">
                <input class="form-check-input" type="checkbox" id="pagarMultaAhora" name="pagarMultaAhora" />
                <label class="form-check-label" for="pagarMultaAhora">Pagar multa ahora</label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Confirmar Terminación" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaInput = document.querySelector('#FechaTerminacionAnticipada');
            const idContrato = document.querySelector('input[name="Id"]').value;

            fechaInput.addEventListener('change', function () {
                const fecha = fechaInput.value;
                if (!fecha) return;

                fetch(`@Url.Action("CalcularMulta")?id=${idContrato}&fechaTerminacion=${fecha}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            alert(data.error);
                            return;
                        }
                        document.querySelector('#totalMeses').textContent = data.totalMeses;
                        document.querySelector('#mesesTranscurridos').textContent = data.mesesTranscurridos;
                        document.querySelector('#mesesAdeudados').textContent = data.mesesAdeudados;
                        document.querySelector('#multaMeses').textContent = data.multaMeses;
                        document.querySelector('#multaImporte').textContent = new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(data.multaImporte);
                    });
            });
        });
    </script>
}
