@using inmobiliaria_mvc.ViewModels
@model PagedResult<Inmueble>

@{
    ViewData["Title"] = "Lista de Inmuebles";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">@ViewBag.Mensaje</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="termino" class="form-control" placeholder="Buscar por dirección, precio o propietario"
            value="@ViewData["Termino"]" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Inmueble</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Dirección</th>
            <th>Precio</th>
            <th>Ambientes</th>
            <th>Estado</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@item.Propietario?.NombreCompleto</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Pagination" model="Model.ToObjectPagedResult()" />