@model IEnumerable<inmobiliaria_mvc.Models.Pago>

@{
    ViewData["Title"] = "Pagos del Inquilino";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Pagos del Inquilino: @ViewBag.InquilinoNombre</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-success">@ViewBag.Mensaje</div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <p>
                        <a asp-action="Index" class="btn btn-outline-primary">Volver</a>
                    </p>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Contrato</th>
                                        <th>Inmueble</th>
                                        <th>Nº Pago</th>
                                        <th>Fecha Esperada</th>
                                        <th>Fecha Pago</th>
                                        <th>Importe</th>
                                        <th>Detalle</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderBy(p => p.ContratoId).ThenBy(p => p.NumeroPago))
                                    {
                                        <tr>
                                            <td>@item.ContratoId</td>
                                            <td>@item.Contrato?.Inmueble?.Direccion</td>
                                            <td>@item.NumeroPago</td>
                                            <td>@item.FechaEsperada.ToShortDateString()</td>
                                            <td>@(item.FechaPago.HasValue ? item.FechaPago.Value.ToShortDateString() : "Pendiente")</td>
                                            <td>@item.Importe.ToString("C")</td>
                                            <td>@item.Detalle</td>
                                            <td>@(item.Estado ? "Activo" : "Anulado")</td>
                                            <td>
                                                @if (item.Estado && !item.FechaPago.HasValue)
                                                {
                                                    <form asp-action="Registrar" method="post" style="display:inline;">
                                                        <input type="hidden" name="contratoId" value="@item.ContratoId" />
                                                        <input type="hidden" name="numeroPago" value="@item.NumeroPago" />
                                                        <button type="submit" class="btn btn-primary btn-sm">Registrar Pago</button>
                                                    </form>
                                                }
                                                <a asp-action="Edit" asp-route-id="@item.IdPago" class="btn btn-warning btn-sm">Editar</a>
                                                <a asp-action="Delete" asp-route-id="@item.IdPago" class="btn btn-danger btn-sm">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No hay pagos registrados para este inquilino.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>