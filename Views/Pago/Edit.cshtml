@model inmobiliaria_mvc.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdPago"></label>
                <input asp-for="IdPago" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="ContratoId"></label>
                <input asp-for="ContratoId" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="NumeroPago"></label>
                <input asp-for="NumeroPago" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="FechaPago"></label>
                <input asp-for="FechaPago" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Detalle"></label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a Lista</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}