@model inmobiliaria_mvc.Models.Pago

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="ContratoId" class="control-label"></label>
    <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.Contrato">
        <option value="">-- Seleccione un contrato --</option>
    </select>
    <span asp-validation-for="ContratoId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="NumeroPago" class="control-label"></label>
    <input asp-for="NumeroPago" class="form-control" />
    <span asp-validation-for="NumeroPago" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="FechaPago" class="control-label"></label>
    <input asp-for="FechaPago" type="date" class="form-control" />
    <span asp-validation-for="FechaPago" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Importe" class="control-label"></label>
    <input asp-for="Importe" class="form-control" />
    <span asp-validation-for="Importe" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Detalle" class="control-label"></label>
    <input asp-for="Detalle" class="form-control" />
    <span asp-validation-for="Detalle" class="text-danger"></span>
</div>

<div class="form-group mt-3">
    <input type="submit" value="Guardar" class="btn btn-primary" />
</div>