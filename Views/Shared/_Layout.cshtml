<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - inmobiliaria_mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <div class="sidebar">
        <div class="logo">Inmobiliaria</div>
        <nav>
            <a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a>
            <a asp-controller="Inquilino" asp-action="Index"><i
                    class="fa-solid fa-users"></i><span>Inquilinos</span></a>
            <a asp-controller="Propietario" asp-action="Index"><i
                    class="fa-solid fa-key"></i><span>Propietarios</span></a>
            <a asp-controller="Inmueble" asp-action="Index"><i
                    class="fa-solid fa-building"></i><span>Inmueble</span></a>
            <a asp-controller="Contrato" asp-action="Index"><i
                    class="fa-solid fa-file-contract"></i><span>Contrato</span></a>
        </nav>
    </div>

    <div class="main-container">
        <div class="topnav">
            <div class="user-info">

                <div>
                    <div class="email">example@mail.com</div>
                    <div class="role">Administrador</div>
                </div>
                <i class="fas fa-comment-alt" style="margin:0 10px; cursor:pointer;"></i>
                <i class="fas fa-bell" style="cursor:pointer;"></i>
            </div>
        </div>

        <div class="content">

        </div>

        <div class="container"></div>
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
